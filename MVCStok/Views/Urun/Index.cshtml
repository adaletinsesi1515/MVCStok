@using MVCStok.Models.Entity
@model List<TBLURUNLER>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
    <tr class="text-center">
        <th scope="col">ÜRÜN ID</th>
        <th scope="col">ÜRÜN ADI</th>
        <th scope="col">MARKA</th>
        <th scope="col">KATEGORİSİ</th>
        <th scope="col">FİYATI</th>
        <th scope="col">STOK ADEDİ</th>
        <th scope="col">İŞLEM</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var urun in Model)
    {
        <tr>
            <th>@urun.URUNID</th>
            <td>@urun.URUNAD</td>
            <td>@urun.MARKA</td>
            <td>@urun.TBLKATEGORILER.KATEGORIAD</td>
            <td>@urun.FIYAT TL</td>
            <td>@urun.STOK</td>
            <td><a href="/Urun/Sil/@urun.URUNID" class="btn btn-danger">SİL</a>
                <a href="/Urun/UrunGetir/@urun.URUNID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }

    </tbody>
</table>

<a href="/Urun/Yeniurun/" class="btn btn-primary">YENİ ÜRÜN EKLE</a>