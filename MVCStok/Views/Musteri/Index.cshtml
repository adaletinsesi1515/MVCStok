@using MVCStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th scope="col">MÜŞTERİ ID</th>
            <th scope="col">MÜŞTERİ ADI</th>
            <th scope="col">MÜŞTERİ SOYADI</th>

            <th scope="col">İŞLEM</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var must in Model)
    {
        <tr>
            <th>@must.MUSTERIID</th>
            <td>@must.MUSTERIAD</td>
            <td>@must.MUSTERISOYAD</td>
            <td><a href="/Musteri/Sil/@must.MUSTERIID" class="btn btn-danger">SİL</a>
                <a href="/Musteri/MusteriGetir/@must.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
    }

    </tbody>
</table>

<a href="/Musteri/Yenimusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>