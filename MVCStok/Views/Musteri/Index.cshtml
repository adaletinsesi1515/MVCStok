@using MVCStok.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="veri" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="text-center">
            <td>MÜŞTERİ ID</td>
            <td>MÜŞTERİ ADI</td>
            <td>MÜŞTERİ SOYADI</td>
            <td>İŞLEM</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var must in Model)
        {
            <tr>
                <th>@must.MUSTERIID</th>
                <td>@must.MUSTERIAD</td>
                <td>@must.MUSTERISOYAD</td>
                <td>
                    <a href="/Musteri/Sil/@must.MUSTERIID"><img border="0" alt="sil" src="~/resim/sil.png" width="20" height="20" /></a>
                    <a href="/Musteri/MusteriGetir/@must.MUSTERIID"><img border="0" alt="sil" src="~/resim/update.png" width="20" height="20" /></a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a href="/Musteri/Yenimusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>