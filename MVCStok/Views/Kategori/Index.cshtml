@using MVCStok.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table id="veri" class="table table-striped table-bordered" style="width:100%">
    <thead>
        <tr class="text-center">
            <th scope="col">KATEGORİ ID</th>
            <th scope="col">KATEGORİ ADI</th>
            <th scope="col">İŞLEM</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ktgr in Model)
        {
            <tr>
                <th>@ktgr.KATEGORIID</th>
                <td>@ktgr.KATEGORIAD</td>
                <td>
                    
                    @*ActionLink ile alert kullanımı var burada *@

                    @*@Html.ActionLink("SİL","Sil","Kategori", new { id=ktgr.KATEGORIID}, new { @class="btn btn-warning", onclick="return confirm ('Silmek istediğinizden emin misiniz??')"})*@

                    <a href="/Kategori/Sil/@ktgr.KATEGORIID"><img border="0" alt="sil" src="~/resim/sil.png" width="20" height="20"/></a>

                    <a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID"><img border="0" alt="sil" src="~/resim/update.png" width="20" height="20"/></a>
                </td>
            </tr>
        }

    </tbody>
</table>

<a href="/Kategori/Yenikategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>