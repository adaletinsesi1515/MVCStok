@using MVCStok.Models.Entity
@model List<TBLKATEGORILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<table class="table table-bordered">
    <thead>
        <tr class="text-center">
            <th scope="col">KATEGORİ ID</th>
            <th scope="col">KATEGORİ ADI</th>
            <th scope="col">İŞLEM</th>

        </tr>
    </thead>
    <tbody>
        @foreach (var ktgr in Model)
        { 
        <tr>
            <th>@ktgr.KATEGORIID</th>
            <td>@ktgr.KATEGORIAD</td>
            <td><a href="/Kategori/Sil/@ktgr.KATEGORIID" class="btn btn-danger">SİL</a>
            <a href="/Kategori/KategoriGetir/@ktgr.KATEGORIID" class="btn btn-success">GÜNCELLE</a></td>
        </tr>
        }

    </tbody>
</table>

<a href="/Kategori/Yenikategori/" class="btn btn-primary">YENİ KATEGORİ EKLE</a>